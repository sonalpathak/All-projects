<UserControl
    x:Class="Neudesic.Schoolistics.WindowsStore.Usercontrols.NewsArticleBottomAppBarControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Neudesic.Schoolistics.WindowsStore.Usercontrols"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
   >

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Margin="0,0,60,0">
            <Button x:ConnectionId='3'  Height="40" Width="40" Margin="40,10,0,10"                           >
                <Button.Template>
                    <ControlTemplate>
                        <Image Source="../Assets/Data-Export.png"/>
                    </ControlTemplate>
                </Button.Template> >
            </Button>
            <TextBlock Text="Share" FontSize="15" Margin="40,0,0,0" FontFamily="OPEN SANS"></TextBlock>
        </StackPanel >
        <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Margin="0,0,60,0">
            <Button x:ConnectionId='2' Name="RateButton" Height="40" Width="40" Margin="0,10,0,10"                           >
                <Button.Template>
                    <ControlTemplate>
                        <Image Source="../Assets/Rating.png"/>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <TextBlock Text="Rate" FontSize="15" Margin="5,0,0,0" FontFamily="OPEN SANS"></TextBlock>
        </StackPanel>
        <StackPanel Name="gridButtonStackPanel" Orientation="Vertical" HorizontalAlignment="Left" Margin="0,0,60,0" >
            <Button x:ConnectionId='1' Name="postCommentButton" Height="40" Width="40" Margin="0,10,40,10"                                >
                <Button.Template>
                    <ControlTemplate>
                        <Image Source="../Assets/Note-Memo-01.png"/>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <TextBlock  Text="Post Comment" FontSize="15" Margin="-10,0,0,0" FontFamily="OPEN SANS"></TextBlock>
        </StackPanel>
       
    </StackPanel>
</UserControl>

