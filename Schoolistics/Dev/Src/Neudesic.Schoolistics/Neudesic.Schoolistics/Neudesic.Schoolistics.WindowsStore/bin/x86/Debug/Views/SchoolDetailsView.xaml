<views:BaseView
    x:Name="pageRoot"
    x:Class="Neudesic.Schoolistics.WindowsStore.Views.SchoolDetailsView"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:common2="using:Neudesic.Schoolistics.WindowsStore.Common"
    xmlns:views="using:Neudesic.Schoolistics.WindowsStore.Views"
    xmlns:local="using:Neudesic.Schoolistics.WindowsStore.Usercontrols"
    mc:Ignorable="d">

    <Page.Resources>

        <!-- TODO: Delete this line if the key AppName is declared in App.xaml -->
        <!--<x:String x:Key="AppName">Oakridge International School</x:String>-->

    </Page.Resources>
    <Page.TopAppBar>
        <AppBar Height="140" Background="#d54b1a">

            <StackPanel Orientation="Horizontal">
                <Button Height="120" Width="140" Margin="10,10,10,10" BorderBrush="#e65b1e" >
                    <StackPanel Margin="10,20,0,10">
                        <Image Source="../Assets/Home.png" Stretch="None" Height="44" RenderTransformOrigin="0.516,0.261"></Image>
                        <TextBlock Text="Home" Margin="10,5,5,0"></TextBlock>
                    </StackPanel>
                    <!--<Button.Background>
                        <ImageBrush  ImageSource="Assets/Home.png" Stretch="None" />
                    </Button.Background>
                    <TextBlock Text="Home"  Margin="10,70,5,0"></TextBlock>-->
                </Button>
                <Button Height="120" Width="140" Margin="10,10,10,10" BorderBrush="#e65b1e">
                    <StackPanel Margin="10,20,0,10">
                        <Image Source="../Assets/Scale.png" Stretch="None" Height="44" RenderTransformOrigin="0.516,0.261"></Image>
                        <TextBlock Text="Comparison" Margin="10,5,5,0"></TextBlock>
                    </StackPanel>
                </Button>
                <Button Height="120" Width="140" Margin="10,10,10,10" BorderBrush="#e65b1e">
                    <StackPanel Margin="10,20,0,10">
                        <Image Source="../Assets/Pie-Chart.png" Stretch="None"></Image>
                        <TextBlock Text="Surveys"   Margin="10,5,5,0"></TextBlock>

                    </StackPanel>


                </Button>
                <Button Height="120" Width="140" Margin="10,10,10,10" BorderBrush="#e65b1e">
                    <StackPanel Margin="10,20,0,10">
                        <Image Source="../Assets/Bookmark-New.png" Stretch="None"></Image>
                        <TextBlock Text="Bookmarks"   Margin="10,5,5,0"></TextBlock>

                    </StackPanel>
                    <!--<Button.Background>
                        <ImageBrush ImageSource="Assets/Bookmark-New.png" Stretch="None"/>
                    </Button.Background>-->
                    <!--<TextBlock Text="Bookmarks"   Margin="10,70,5,0"></TextBlock>-->
                </Button>
                <Button Height="120" Width="140" Margin="10,10,10,10" BorderBrush="#e65b1e">
                    <StackPanel Margin="10,20,0,10">
                        <Image Source="../Assets/News.png" Stretch="None" Height="44" RenderTransformOrigin="0.516,0.261"></Image>
                        <TextBlock Text="News" Margin="10,5,5,0"></TextBlock>
                    </StackPanel>
                </Button>

            </StackPanel>




        </AppBar>

    </Page.TopAppBar>
    <Page.BottomAppBar>
        <AppBar x:ConnectionId='1'                       >
            <local:BottonAppBar x:ConnectionId='2'                                                              Margin="-18,0,-13,0" ></local:BottonAppBar>
        </AppBar>
    </Page.BottomAppBar>

    <!--
        This grid acts as a root panel for the page that defines two rows:
        * Row 0 contains the back button and page title
        * Row 1 contains the rest of the page layout
    -->
    <Grid Style="{StaticResource LayoutRootStyle}" >
        <Grid.Background>
            <ImageBrush ImageSource="ms-appx:///Assets/background-image.png"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="147" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Back button and page title -->
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Button x:ConnectionId='3' x:Name="back_button" Height="42" Width="42"                Margin="30,20,20,0" Style="{StaticResource BackButtonNewStyle}"/>
            <!--<Button x:Name="buttonIMage" Click="GoBack" Style="{StaticResource BackButtonNewStyle}" IsEnabled="{Binding Frame.CanGoBack, ElementName=pageRoot}" BorderBrush="Transparent" BorderThickness="0" Margin="30,20,20,0">             <Image Source="ms-appx:///Assets/back-button.png" Width="50" Height="50" Margin="30,20,20,0"></Image>-->
            <!--</Button>-->
            <TextBlock x:Name="pageTitle" Grid.Column="1" Style="{StaticResource PageHeaderTextStyle}" Text="{Binding SchoolName,Mode=TwoWay}" Width="1000" FontFamily="OPEN SANS" />
            <Image Grid.Column="2" Width="50" Height="50" Source="ms-appx:///Assets/profile-pic.png" Margin="0,54,63,33" RenderTransformOrigin="1.151,0.174"></Image>
        </Grid>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Visible" HorizontalScrollMode="Enabled" VerticalScrollMode="Disabled" >
            <StackPanel Orientation="Horizontal" Background="White">



                <local:SchoolDetailsUserControl Margin="120,27,0,0"></local:SchoolDetailsUserControl>
                <StackPanel>
                    <TextBlock Text="ALUMNI" Margin="80,27,0,10" FontSize="24" Foreground="#056e88" FontWeight="Bold"  />
                    <local:alumni Margin="80,15,0,0" />
                </StackPanel>
                <StackPanel>
                <TextBlock Text="SENIOR MANAGEMENT TEAM" Margin="80,27,0,10" FontSize="24" Foreground="#056e88" FontWeight="Bold"  />
                    <local:SeniorManagementTeamUserControl Margin="80,15,0,0"></local:SeniorManagementTeamUserControl>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Location" Margin="80,27,0,10" FontSize="24" Foreground="#056e88" FontWeight="Bold"  /> 
                    <!--<local:LocationUserControl Width="*" ></local:LocationUserControl>-->
                    <local:LocationUserControl  Margin="80,15,30,0"></local:LocationUserControl>
                </StackPanel>



            </StackPanel>
        </ScrollViewer>
    </Grid>
















    <VisualStateManager.VisualStateGroups>

        <!-- Visual states reflect the application's view state -->
        <VisualStateGroup x:Name="ApplicationViewStates">
            <VisualState x:Name="FullScreenLandscape" />
            <VisualState x:Name="Filled" />

            <!-- The entire page respects the narrower 100-pixel margin convention for portrait -->
            <VisualState x:Name="FullScreenPortrait">
                <Storyboard>
                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton"
                                                       Storyboard.TargetProperty="Style">
                        <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource PortraitBackButtonStyle}" />
                    </ObjectAnimationUsingKeyFrames>
                </Storyboard>
            </VisualState>

            <!-- The back button and title have different styles when snapped -->
            <VisualState x:Name="Snapped">
                <Storyboard>
                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton"
                                                       Storyboard.TargetProperty="Style">
                        <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedBackButtonStyle}" />
                    </ObjectAnimationUsingKeyFrames>
                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pageTitle"
                                                       Storyboard.TargetProperty="Style">
                        <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedPageHeaderTextStyle}" />
                    </ObjectAnimationUsingKeyFrames>
                </Storyboard>
            </VisualState>
        </VisualStateGroup>
    </VisualStateManager.VisualStateGroups>
</views:BaseView>

