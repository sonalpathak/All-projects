<views:BaseView
    x:Name="pageRoot"
    x:Class="Neudesic.Schoolistics.WindowsStore.Views.BookmarkedSchoolItemsPageView"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:common2="using:Neudesic.Schoolistics.WindowsStore.Common"
    xmlns:views="using:Neudesic.Schoolistics.WindowsStore.Views"
     xmlns:local="using:Neudesic.Schoolistics.WindowsStore.Usercontrols"
    mc:Ignorable="d">

    <Page.Resources>

        <!-- TODO: Delete this line if the key AppName is declared in App.xaml -->
        <x:String x:Key="AppName">Bookmarked Schools</x:String>
    </Page.Resources>

    <!--
        This grid acts as a root panel for the page that defines two rows:
        * Row 0 contains the back button and page title
        * Row 1 contains the rest of the page layout
    -->
    <Grid Style="{StaticResource LayoutRootStyle}">
        <Grid.Background>
            <ImageBrush ImageSource="../Assets/background-image.png"></ImageBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="140" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="0,30,0,0" >            
            <local:UserHeaderControl HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,50,0" ></local:UserHeaderControl>
        </Grid>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Grid.ColumnSpan="2" Margin="0,30,0,0">
            <Button x:ConnectionId='1' x:Name="backButton"                Style="{StaticResource CustomBackButton}" Margin="25,0,0,25" Grid.Column="0" Height="50" Width="50"/>
            <TextBlock x:Name="pageTitle" FontFamily="OPEN SANS" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="30,0,0,0" 
                       Style="{StaticResource PageHeaderTextStyle}" Text="{StaticResource AppName}" FontSize="45" />
            <!--<Image Margin="700,20,0,0" Source="../Assets/profile-pic.png" Height="50" Width="50" HorizontalAlignment="Right"></Image>
            <TextBlock Text="User name" FontFamily="OPEN SANS" FontSize="20" Margin="10,60,0,0" HorizontalAlignment="Right"></TextBlock>
            <Image Source="../Assets/down-arrow-icon.png" Width="20" Height="20" Margin="10,35,0,0" HorizontalAlignment="Right"></Image>-->
        </StackPanel>


        <GridView
                x:Name="itemGridView"
                AutomationProperties.AutomationId="ItemsGridView"
                AutomationProperties.Name="Items"
                TabIndex="1"
               Grid.Row="1"
            Padding="100,30,40,46"
                ItemsSource="{Binding BookmarkedSchoolDetailsPage}"
                ItemTemplate="{StaticResource BookmarkedSchoolsGridView }"
                SelectionMode="None"
                IsSwipeEnabled="false"
               IsItemClickEnabled="True"
                Background="White"
                >

            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <VariableSizedWrapGrid MaximumRowsOrColumns="4" Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </GridView>
        <VisualStateManager.VisualStateGroups>

            <!-- Visual states reflect the application's view state -->
            <VisualStateGroup x:Name="ApplicationViewStates">
                <VisualState x:Name="FullScreenLandscape" />
                <VisualState x:Name="Filled" />

                <!-- The entire page respects the narrower 100-pixel margin convention for portrait -->
                <VisualState x:Name="FullScreenPortrait">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton"
                                                       Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource PortraitBackButtonStyle}" />
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>

                <!-- The back button and title have different styles when snapped -->
                <VisualState x:Name="Snapped">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton"
                                                       Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedBackButtonStyle}" />
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pageTitle"
                                                       Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedPageHeaderTextStyle}" />
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</views:BaseView>

