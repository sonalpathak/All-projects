<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#022039">
    <Button
        android:id="@+id/MyButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/Hello"
        android:layout_weight="1" />
    <TextView
        android:id="@+id/ViewProfileHeader"
        android:text="WELCOME TO"
        android:layout_width="131.1dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="0.0dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#a4a9af"
        android:layout_marginRight="0.0dp"
        android:layout_weight="1"
        android:layout_marginLeft="0.0dp" />
    <ImageView
        android:id="@+id/splashlogo"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:background="@drawable/n_splash_logo"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal" />
    <TextView
        android:id="@+id/ProfileHeader"
        android:text="GOLD SPONSOR GIDS 2014"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="#a4a9af"
        android:layout_marginBottom="0.0dp"
        android:layout_marginTop="8dp"
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_marginRight="0.0dp"
        android:layout_weight="1"
        android:layout_marginLeft="0.0dp" />
    <ImageView
        android:id="@+id/imagefooter"
        android:layout_width="310dp"
        android:layout_height="130dp"
        android:background="@drawable/n_footer"
        android:layout_marginTop="0.0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" />
</LinearLayout>